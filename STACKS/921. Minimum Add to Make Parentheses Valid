class Solution {
public:
    int minAddToMakeValid(string s) {
        if(s=="") return true;

        stack<char> st;


        for(int i=0; i<s.size(); i++){
           
            if(s[i] == '('){
                st.push(s[i]);
            }else if(!st.empty() && st.top() == '('){
                if(!st.empty()) st.pop();
            }else{
                st.push(')');
            }
        }
        return st.size();
    }
};
