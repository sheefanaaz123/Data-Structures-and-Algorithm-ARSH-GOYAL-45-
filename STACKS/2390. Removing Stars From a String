class Solution {
public:
    string removeStars(string s) {

        string result;
        stack<char>st;

        for(int i=0; i<s.size(); i++){    
           if(s[i] == '*' && !st.empty()){
            st.pop();
           }else{
            st.push(s[i]);
           }
        }

        if(st.empty()) return "";

        while(!st.empty()){
             result.push_back(st.top()); 
             st.pop();
        }
        
        reverse(result.begin(), result.end());
        return result;       
    }
};
